# KonBase Environment Variables
# Copy this file to .env and fill in your values

# NextAuth Configuration
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Database Configuration
# PostgreSQL Database Connection
# Use either POSTGRES_URL or DATABASE_URL (both are supported)
POSTGRES_URL=postgres://user:password@localhost:5432/konbase
# DATABASE_URL=postgres://user:password@localhost:5432/konbase

# File Storage Configuration
# Option 1: Vercel Blob (Recommended for production)
BLOB_READ_WRITE_TOKEN=your-blob-read-write-token

# Option 2: Local Storage (Development only)
# LOCAL_STORAGE_PATH=./uploads

# Optional: Force specific storage type (auto-detected if not set)
# STORAGE_TYPE=vercel-blob
# STORAGE_TYPE=local

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application Settings
APP_NAME=KonBase
APP_URL=http://localhost:3000
