{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "forceConsistentCasingInFileNames": true, // Ensure file name casing consistency
    "strict": true, // Enable all strict type-checking options
    "noUnusedParameters": false, // Keep allowing unused parameters if needed
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false // Keep allowing unused locals if needed
  }
}
